generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Posts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  recipient String
  message String
  song_id String
  song_name String
  song_artist String
  song_image String
  createdAt DateTime @default(now()) @map("created_at")
}